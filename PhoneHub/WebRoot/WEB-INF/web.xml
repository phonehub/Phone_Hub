<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name></display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>SearchProductCtrl</servlet-name>
    <servlet-class>cn.edu.zhku.phonehub.product.ctrl.SearchProductCtrl</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ShowProductDetailCtrl</servlet-name>
    <servlet-class>cn.edu.zhku.phonehub.product.ctrl.ShowProductDetailCtrl</servlet-class>
  </servlet>

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ShowOrderCtrl</servlet-name>
    <servlet-class>cn.edu.zhku.phonehub.order.ctrl.ShowOrderCtrl</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>CommitOrderCtrl</servlet-name>
    <servlet-class>cn.edu.zhku.phonehub.order.ctrl.CommitOrderCtrl</servlet-class>
  </servlet>

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>CreateStoreCtrl</servlet-name>
    <servlet-class>cn.edu.zhku.phonehub.store.ctrl.CreateStoreCtrl</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>AddProductCtrl</servlet-name>
    <servlet-class>cn.edu.zhku.phonehub.store.ctrl.AddProductCtrl</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>PayOrderCtrl</servlet-name>
    <servlet-class>cn.edu.zhku.phonehub.order.ctrl.PayOrderCtrl</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>SearchProductCtrl</servlet-name>
    <url-pattern>/servlet/SearchProductCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowProductDetailCtrl</servlet-name>
    <url-pattern>/servlet/ShowProductDetailCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ShowOrderCtrl</servlet-name>
    <url-pattern>/servlet/ShowOrderCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CommitOrderCtrl</servlet-name>
    <url-pattern>/servlet/CommitOrderCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CreateStoreCtrl</servlet-name>
    <url-pattern>/servlet/CreateStoreCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddProductCtrl</servlet-name>
    <url-pattern>/servlet/AddProductCtrl</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PayOrderCtrl</servlet-name>
    <url-pattern>/servlet/PayOrderCtrl</url-pattern>
  </servlet-mapping>
  
  
</web-app>
 
